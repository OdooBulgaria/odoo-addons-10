<?xml version="1.0"?>
<openerp>
	<data>
	     <record id="view_suggest_product_ept" model="ir.ui.view">
	           <field name="name">Suggestive Product</field>
	           <field name="model">product.product</field>
	           <field name="type">form</field>
	           <field name="inherit_id" ref="product.product_normal_form_view"/>
	           <field name="arch" type="xml">
				  <notebook position="inside">
	                       <page string="Suggest Products">		                       
								<group string="Suggestive Products" colspan="4">
									<field name="suggestive_product_ids" widget="many2many_tags" domain="[('id','!=',context.get('active_id'))]"/>
								</group>								
	                       </page>
	              </notebook>
	           </field>
	     </record>
	 </data>
</openerp>